extends ../layout

block content
  .col-xs-10.col-xs-offset-1
    .row
      .alert.alert-danger#instructorFormError(hidden) Please fill out all required form fields.
      .alert.alert-info#instructorFormProcessing(hidden) Processing Form - Please wait.

      #instructorFormPassed(hidden)
        img(style="width:100%;", src="/img/event/congratulations.png")

    form(id="register",method="post",action="register")

      .row: .col-xs-12
        h3.text-center Register to Become an Instructor

      .row: .col-xs-12
        p * (required fields)

      .row
        .col-xs-12.col-sm-6
          .form-group
            label First Name *
            input(type="text", id="fname", name="fname" || '', required).form-control
        .col-xs-12.col-sm-6
          .form-group
            label Last Name *
            input(type="text", id="lname", name="lname" || '', required).form-control

      .row
        .col-xs-12.col-sm-6
          .form-group
            label Email *
            .input-group
              span.input-group-addon @
              input(type="email", id="email", name="email" || '', required).form-control

        .col-xs-12.col-sm-6
          .form-group
            label Phone Number *
            input(type="text", id="phone", name="phone" || '', required).form-control

      .row
        .col-xs-12.col-sm-6
          .form-group
            label Address Line 1 *
            input(type="text", id="address1", name="address1", placeholder="Street address, P.O. box, company name, c/o" || '', required).form-control
        .col-xs-12.col-sm-6
          .form-group
            label Address Line 2
            input(type="text", id="address2", name="address2", placeholder="Apartment, suite, unit, building, floor, etc.").form-control
      .row
        .col-xs-12.col-sm-6
          .form-group
            label City *
            input(type="text", id="city", name="city" || '', required).form-control

        .col-xs-12.col-sm-3
          .form-group
            label State/Province/Region *
            input(type="text", id="state", name="state" || '', required).form-control
        .col-xs-12.col-sm-3
          .form-group
            label ZIP/Postal Code *
            input(type="text", id="zip", name="zip" || '', required).form-control
