extends layout

block content
  .row: .col-xs-12
    .dashhead
      .dashhead-titles
        h6.dashhead-subtitle Dashboards
        h3.dashhead-title #{instructorName} (Instructor)
          .row: .col-xs-12   
          .pc-tab
          section
          .row: .col-xs-12.title-heading
      #total-codes-available.row
    .col-lg-2
      p Total Courses :   #{courselength}

  #table-custom.row
    table.table.custom-table-striped
      thead
        tr
          th Course Name 
          th Instructor Name               
          th Total Voucher Codes
          th Created Date
          th Expiry Date                
          th Created By
          th
          th

      tbody
      for code in coursedata   
        tr
          td= CourseTask[code.get('courseId')]
          td= CourseInstructor[code.get('courseId')]
          td= code.get('VoucherCodeCount')
          td= libs.moment(code.get('CreateDate')).format('DD-MM-YYYY')
          td= libs.moment(code.get('ExpiryDate')).format('DD-MM-YYYY')
          td= code.get('CreatedBy')
          td._text-color: a(href='vouchersdetails/'+code.get('courseId')) View
          td._text-color: a(href='vouchersdetails/'+code.get('courseId')+'/downloadcsv') Download CSV