extends ../layout

block content
  div(style="background-color:#000;margin-top:-21px;").hidden-xs: .container(style='height: 25pc;background:url(/img/event/HHH8BSLNfV/header.png);background-size:cover;background-repeat:no-repeat;background-position:center;')

  div(style="background-color:#000;margin-top:-21px;").hidden-sm.hidden-md.hidden-lg
    img(style="width:100%;", src="/img/event/HHH8BSLNfV/header.png")

  #profile.page: .container: .row
    .col-xs-10.col-xs-offset-1
      h4 This form is no longer available
    //-
      .row
        .col-xs-12.col-sm-6
          .row: .col-xs-12
            .hr-divider.m-b
              h3.hr-divider-content.hr-divider-heading Individual Information

            .alert.alert-danger#freeFormError(hidden) Please fill out all required form fields.
            .alert.alert-info#freeFormProcessing(hidden) Processing Form - Please wait.

            #freeFormPassed(hidden)
              img(style="width:100%;", src="/img/event/congratulations.png")

            #freeForm
              form(id='freeForm2016')
                .row
                  .col-xs-12.col-sm-9
                    p * (required fields)
                .row
                  .col-xs-12.col-sm-9
                    .form-group
                      label First Name *
                      input(type='text', id='firstName', required).form-control

                .row
                  .col-xs-12.col-sm-9
                    .form-group
                      label Last Name *
                      input(type='text', id='lastName', required).form-control

                .row
                  .col-xs-12.col-sm-9
                    .form-group
                      label Email *
                      input(type='email', id='email', required).form-control

                .row
                  .col-xs-12.col-sm-9
                    .form-group
                      label Phone Number
                      input(type='text', id='phone').form-control

                .row
                  .col-xs-12.col-sm-9
                    .form-group
                      label(for='referredBy') Referred:
                        select.form-control(name='referredBy', id='referredBy')
                          option You Will Change The World
                          each val in ['Top 100 Men', 'Top 100 Women', 'Social Register', 'LV Chamber of Commerce', 'Andy Broadaway', 'Ann McIndoo', 'Audra Hajj', 'Greg Jacobson', 'Lee Goff', 'Matt Belair', 'Ken Rochon', 'Shore Slocum', 'Christoff Weihman', 'Peter Anthony Wynn']
                            option= val

                .row
                  .col-xs-12.col-sm-12
                    .checkbox
                      label(for='allowEmails')
                        input(type='checkbox', id='allowEmails', value='true', checked)
                        | I agree to receive emails from You Will Change The World.

                .row
                  .col-xs-12
                    .form-group
                      label Are you bringing a guest?
                      br
                      label.radio-inline
                        input(type='radio', name='guestOption', value='yesGuest', id='yesGuest', required)
                        |  Yes
                      label.radio-inline
                        input(type='radio', name='guestOption', value='noGuest', id='noGuest', required)
                        |  No

              form(id='guestForm', style='display:none')

                .row
                  .col-xs-12.col-sm-9
                    .form-group
                      label Guest's First Name *
                      input(type='text', id='guestFirstName', required).form-control

                .row
                  .col-xs-12.col-sm-9
                    .form-group
                      label Guest's Last Name *
                      input(type='text', id='guestLastName', required).form-control

                .row
                  .col-xs-12.col-sm-9
                    .form-group
                      label Guest's Email *
                      input(type='email', id='guestEmail', required).form-control

                .row
                  .col-xs-12.col-sm-9
                    .form-group
                      label Guest's Phone Number *
                      input(type='text', id='guestPhone', required).form-control

              .row
                .col-xs-12.col-sm-9
                  input(id='eventFormSubmit', type='button', value='Submit').btn.btn-primary.btn-lg

        .col-xs-12.col-sm-6
          h2 Details
          ul
            li: h4 Social Entrepreneur Summit
            li: h4 Sept. 17th & 18th, 2016
            li: h4 Original Price: $899
          h2 Speakers
          ul
            li: h4 Peter Anthony Wynn
            li: h4 Lee Goff
            li: h4 Ken Rochon
            li: h4 more TBA
          h2 Lunches
          p Enter promo code <b>'LUNCH'</b> to pre-order lunches for $47 for both days. Lunch can also be bought on-site for $27 per day.
          .row(style="height:10px")
          a.btn.btn-primary.btn-lg(href="https://nd306.infusionsoft.com/app/orderForms/July-2016---Social-Entrepreneur-Summit" target="_blank") Buy Lunches Here

      hr

      .row
        .col-xs-12.col-sm-6
          h2.text-left Accommodations
          br
          h4.text-center
            p Book your accommodations on property at IPEC Las Vegas.
            br
            p Special Event Super Saver Discount of only $100 per night when you purchase your ticket to SES.
            br
            p Call Ashley at <b>1-866-982-6222</>
        .col-xs-12.col-sm-6
          img(src="/img/event/HHH8BSLNfV/IPEC-room.jpg").img-responsive

      hr

      .row: .col-xs-12
        h2 Location
        h3
          p International Peace Education Center (IPEC)
          p 6590 Bermuda Rd
          p Las Vegas, NV 89119
          p 702.970.2000
      .row: .col-xs-12.text-center(style="margin: 0 auto")
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3224.985515363641!2d-115.15439984831194!3d36.06945738000803!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80c8c586319c7d13%3A0x1d32f5d71aadbb36!2sInternational+Peace+Education+Center!5e0!3m2!1sen!2sus!4v1466020842105" width="945" height="440" frameborder="0" style="border:0" allowfullscreen></iframe>

      .row
        .col-xs-12
          img(src="/img/event/HHH8BSLNfV/ipec-small.jpeg").img-responsive


