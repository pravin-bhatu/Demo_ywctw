  .container
    .row
      .col-lg-4.col-sm-6
        .card.card-container
          h4.card-section-title 
            a(style="text-decoration:none;color:#ad9650;" href='/courses') Courses
          for course in coursesHome
            .card.mb-20.b-0: a(href='/courses/' + course.get('slug')) 
                .course-card.first-card
                  figure.effect-julia
                    if course.get('cardImage')
                      img.first-card-img-top(src=course.get('cardImage').url(), alt= course.get('name') + ' ' + course.get('instructor').get('name'))
                    else 
                      img.first-card-img-top(src='https://placeholdit.imgix.net/~text?txtsize=36&txt=500×275&w=500&h=275' alt='Card image cap')
                    figcaption
                      h2(style='text-transform:capitalize;').fittext= course.get('name')
                      p= course.get('instructor') ? course.get('instructor').get('name') : '' 
                      button.btn.btn-primary
                        if course.get('stage') === 'prod'
                          if course.get('price') === 0
                            span Free Enrollment
                          else
                            span Enroll for
                              include course/partials/price
                        else
                          span Coming Soon


      | 
      .col-lg-4
        .card.card-container
          h4.card-section-title 
            a(href="/events" style="text-decoration:none;color:#ad9650;")  Events
          .card.mb-20.first-card
            div
              img.card-img-top(src='/img/event/HHH8BSLNfV/event-card-lv.jpg' alt='Card image cap')
            .card-body
